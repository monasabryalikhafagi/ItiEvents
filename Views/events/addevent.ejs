<%include ../partials/admin/header%>
<style>
    .one{
        margin-left: 50px;
    }
</style>
<body>
        <div class="container">
                <div class="modal-dialog">
                    <div class="modal-content">
                        
                        <hr />
                        <div class="modal-body">
    <form action="/events/add" method="post"  >

    <!-- <input type="file" name="photofile"> -->
    <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
                </span>
    ID<input type="text" name="id"  class="form-control one" />
            </div>
        </div>

        <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                    <span class="glyphicon glyphicon-lock"></span>
                    </span>  
    TITLE<input type="text" name="name" class="form-control one " />
                        </div>
                    </div>
                    <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                                </span>  
                Date<input type="date" name="date" class="form-control one " />
                                    </div>
                                </div>


                    <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                                </span>
   Main Speaker
   
   <select name="mainSpeaker" class="form-control">
    <% speakers.forEach((speaker)=>{%>
        <option value="<%=speaker._id%>"><%=speaker.Name%></option>
    <%})%>
   </select>
</div>
</div>


<div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
            </span>
   Other Speakers<br/>
   <select name="otherSpeakers" multiple class="form-control">
        <% speakers.forEach((speaker)=>{%>
            <option value="<%=speaker._id%>"><%=speaker.Name%></option>
        <%})%>
       </select>
    </div>
</div>

    
    <div class="form-group text-center">

    <input type="submit" value="save"  class="btn btn-primary btn-lg">
    </div>
    </form>
           </div>
       </div>
   </div>
</div>  
<%include ../partials/admin/footer%>